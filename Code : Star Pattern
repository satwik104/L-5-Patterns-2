#include<iostream>
using namespace std;


int main(){

       /*  Read input as specified in the question.
	* Print output as specified in the question.
	*/
    int i,j,k,n;
    cin>>n;
    for(i=1;i<=n;i++)
    {
        for(k=1;k<=n-i;k++)
            cout<<" ";
        for(j=1;j<=2*i-1;j++)
            cout<<"*";
        cout<<endl;
    }
  return 0;
}


